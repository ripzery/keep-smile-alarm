<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwExceptions="true"
      internalLogLevel="Trace"
      internalLogFile="..\..\..\logs\nlog-web.log">

  <targets>
    <target xsi:type="File" name="f" fileName="${basedir}/logs/NVG_${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}"/>
    <target xsi:type="File" name="err" fileName="${basedir}/logs/NVG_error_${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${callsite} - ${message}"/>
    <target xsi:type="File" name="f_internal" fileName="${basedir}/logs/NVG_internal_${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${callsite} - ${message}"/>
    <target xsi:type="ColoredConsole" name="c"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Info" maxlevel="Warn" writeTo="f" />
    <logger name="*" minlevel="Error" writeTo="err" />

    <logger name="internal" minlevel="Debug" writeTo="f_internal" />
    
    <logger name="*" minlevel="Info" writeTo="c" />
  </rules>
</nlog>