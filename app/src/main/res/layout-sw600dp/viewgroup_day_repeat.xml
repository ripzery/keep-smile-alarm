<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.EWIT.FrenchCafe.view.SquareToggleButton
            android:id="@+id/btnMon"
            android:textOn="MON"
            android:textOff="MON"
            style="@style/RepeatDayToggleButton"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_padding_16"
            android:layout_height="1dp"/>

        <com.EWIT.FrenchCafe.view.SquareToggleButton
            android:id="@+id/btnTue"
            android:textOn="TUE"
            android:textOff="TUE"
            style="@style/RepeatDayToggleButton"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_padding_16"
            android:layout_height="1dp"/>

        <com.EWIT.FrenchCafe.view.SquareToggleButton
            android:id="@+id/btnWed"
            android:textOn="WED"
            android:textOff="WED"
            style="@style/RepeatDayToggleButton"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_padding_16"
            android:layout_height="1dp"/>

        <com.EWIT.FrenchCafe.view.SquareToggleButton
            android:id="@+id/btnThu"
            android:textOn="THU"
            android:textOff="THU"

            style="@style/RepeatDayToggleButton"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_padding_16"
            android:layout_height="1dp"/>

        <com.EWIT.FrenchCafe.view.SquareToggleButton
            android:id="@+id/btnFri"
            android:textOn="FRI"
            android:textOff="FRI"
            style="@style/RepeatDayToggleButton"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_padding_16"
            android:layout_height="1dp"/>

        <com.EWIT.FrenchCafe.view.SquareToggleButton
            android:id="@+id/btnSat"
            android:textOn="SAT"
            android:textOff="SAT"
            style="@style/RepeatDayToggleButton"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_padding_16"
            android:layout_height="1dp"/>

        <com.EWIT.FrenchCafe.view.SquareToggleButton
            android:id="@+id/btnSun"
            android:textOn="SUN"
            android:textOff="SUN"
            style="@style/RepeatDayToggleButton"/>



    </LinearLayout>


</merge>