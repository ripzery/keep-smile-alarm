<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <!--<include layout="@layout/layout_maps_alarm_hint"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding_16"
            android:paddingLeft="@dimen/margin_padding_16"
            android:paddingRight="@dimen/margin_padding_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:text="@string/fragment_maps_alarm_destination"/>

            <include layout="@layout/layout_divider"/>

            <TextView
                android:id="@+id/tvSetDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_maps_alarm_destination_hint"
                android:layout_gravity="center_horizontal"
                android:alpha="0.54"
                android:layout_marginTop="@dimen/margin_padding_16"
                android:textSize="16sp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSetDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_padding_16"
                android:layout_marginTop="@dimen/margin_padding_16"
                android:backgroundTint="@color/colorTeal"
                android:textColor="@android:color/white"
                android:text="@string/fragment_maps_alarm_set_dest"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_16"
                android:textSize="@dimen/title_text_size"
                android:text="@string/fragment_maps_alarm_time_destination"
                />

            <include layout="@layout/layout_divider"/>

            <include layout="@layout/layout_time_picker"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSetAlarm"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="@dimen/margin_padding_16"
            android:layout_marginRight="@dimen/margin_padding_16"
            android:layout_marginBottom="@dimen/margin_padding_16"
            style="@style/SetAlarmButton"
            android:text="Set Alarm"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

