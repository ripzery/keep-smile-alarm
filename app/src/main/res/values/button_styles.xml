    <style name="RepeatDayToggleButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_toggle_repeat_day</item>
