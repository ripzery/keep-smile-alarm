<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SetAlarmButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SelectDateButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorRed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchPlaceButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorTeal</item>
        <item name="android:textColor">@android:color/white</item>
